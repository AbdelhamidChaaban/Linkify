{
  "name": "linkify-backend",
  "version": "1.0.0",
  "description": "Backend service for Linkify Alfa automation. TODO: Remove puppeteer, puppeteer-extra, puppeteer-extra-plugin-stealth once captchaService.js is fully implemented.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "npx pm2 start ecosystem.config.js && npx pm2 unmonitor linkify-backend",
    "pm2:stop": "npx pm2 stop ecosystem.config.js",
    "pm2:restart": "npx pm2 restart ecosystem.config.js && npx pm2 unmonitor linkify-backend",
    "pm2:logs": "npx pm2 logs",
    "pm2:monit": "npx pm2 monit",
    "pm2:fix-monitoring": "node fix-pm2-monitoring.js",
    "pm2:setup-windows": "setup-pm2-windows.bat"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bullmq": "^5.66.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.6.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.8",
    "puppeteer": "^24.0.0",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "pm2": "^6.0.13"
  }
}
